<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">****</property>
        <property name="connection.username">****</property>
        <property name="connection.password">****</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="org.jboss.logging.provider">log4j</property>

        <property name="show_sql">true</property>

        <property name="format_sql">true</property>
        <!--<property name="hbm2ddl.auto">create</property>-->

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="com.replay588.hotelreception.entity.Reservation" />
        <mapping class="com.replay588.hotelreception.entity.HotelRoom"/>
        <mapping class="com.replay588.hotelreception.entity.Customer"/>


        <!-- <mapping resource="com/mkyong/user/DBUser.hbm.xml"></mapping> -->
    </session-factory>
</hibernate-configuration>